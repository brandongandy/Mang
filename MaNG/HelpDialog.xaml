<Window x:Name="Help" x:Class="Mang.HelpDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Mang"
        mc:Ignorable="d"
        Title="Mang Help" Height="512" Width="589" WindowStartupLocation="CenterScreen" Icon="icon.ico" ResizeMode="NoResize">
  <Grid>
    <TextBlock x:Name="helpTextBlock" HorizontalAlignment="Left" Margin="20,20,0,0" TextWrapping="Wrap" FontSize="16" Text="TextBlock" VerticalAlignment="Top" Height="380" Width="530" Loaded="HelpTextBox_Loaded" TextAlignment="Justify"/>
    <Button x:Name="helpOKButton" HorizontalAlignment="Left" Margin="280,420,0,0" VerticalAlignment="Top" Width="40" Height="40" Click="HelpOKButton_Click" FontSize="16" HorizontalContentAlignment="Center" />

  </Grid>
</Window>
