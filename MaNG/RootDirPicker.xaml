<Window x:Class="MaNG.RootDirPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaNG"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Height="200" Width="500"
             WindowStartupLocation="CenterOwner">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="40" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Label Name="rootDirLabel" Content="Current Root Directory" FontSize="20"
           Grid.Row="0"/>
    <Canvas Grid.Row="1">
      <TextBox Name="rootDirTextbox" Text="{Binding RootDir}" Height="20" Width="300" HorizontalAlignment="Left" Margin="10" Loaded="rootDirTextbox_Loaded"/>
      <Button Name="rootDirPickerBtn" Content="..." Width="20" Height="20" Margin="10" Canvas.Left="310" Click="rootDirPickerBtn_Click"/>
      <Button Name="OkBtn" Content="OK" Margin="10" Padding="5" Canvas.Top="25" Click="OkBtn_Click"/>
      <Button Name="CancelBtn" Content="Cancel" Margin="10" Padding="5" Canvas.Top="25" Canvas.Left="35" Click="CancelBtn_Click"/>
    </Canvas>
  </Grid>
</Window>
